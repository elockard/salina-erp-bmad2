# Database
# Admin connection for migrations, Studio, and non-RLS queries
DATABASE_URL=postgresql://neondb_owner:...@....neon.tech/neondb?sslmode=require

# Authenticated connection for app queries with RLS enforcement (Neon Authorize)
# Get this from Neon Console after configuring Clerk as auth provider
DATABASE_AUTHENTICATED_URL=postgresql://authenticated:...@....neon.tech/neondb?sslmode=require&options=endpoint%3D...

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk Webhook Secret
# Get this from Clerk Dashboard > Webhooks after creating webhook endpoint
CLERK_WEBHOOK_SECRET=whsec_...

# Application URL
# Base domain for tenant subdomains (e.g., tenant.salina-erp.com)
# Use localhost:3000 for development, production domain for production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Encryption Key for sensitive data (Tax IDs)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-64-character-hex-key-here-use-openssl-rand-hex-32-to-generate

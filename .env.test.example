# Salina ERP Test Environment Configuration
# Copy this file to .env.test and fill in actual values

# Test Environment
TEST_ENV=local
BASE_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Multi-Tenant Configuration
# Format: subdomain.localhost:3000 (e.g., acmepublishing.localhost:3000)
TEST_TENANT_SUBDOMAIN=salinabookshelf
TEST_TENANT_DOMAIN=localhost:3000

# Authentication (Clerk)
# Create test users via Clerk dashboard with different roles
TEST_OWNER_EMAIL=elockard@salinabookshelf.com
TEST_OWNER_PASSWORD=

TEST_ADMIN_EMAIL=admin@testpublisher.com
TEST_ADMIN_PASSWORD=

TEST_EDITOR_EMAIL=editor@testpublisher.com
TEST_EDITOR_PASSWORD=

TEST_FINANCE_EMAIL=finance@testpublisher.com
TEST_FINANCE_PASSWORD=

TEST_AUTHOR_EMAIL=author@example.com
TEST_AUTHOR_PASSWORD=

# Database (Neon PostgreSQL)
# Use separate test database to avoid data conflicts
TEST_DATABASE_URL=postgresql://...
TEST_DATABASE_URL_POOLED=postgresql://...

# AWS S3 (Test Bucket)
# Use dedicated test bucket for PDF statement uploads
EST_AWS_S3_BUCKET=salina-erp-statements-dev
TEST_AWS_REGION=us-west-2

# Email Service (Resend)
# Use test mode or dedicated test API key
TEST_RESEND_API_KEY=
TEST_EMAIL_FROM=test@testpublisher.com

# Background Jobs (Inngest)
# Use test environment or separate Inngest app
TEST_INNGEST_EVENT_KEY=
TEST_INNGEST_SIGNING_KEY=

# Feature Flags
# Enable/disable features under test
FEATURE_FLAG_ROYALTY_CALCULATIONS=true
FEATURE_FLAG_PDF_GENERATION=true
FEATURE_FLAG_AUTHOR_PORTAL=true

# Test Data Cleanup
# Auto-cleanup test data after test runs
AUTO_CLEANUP_TEST_DATA=true

# Debugging
# Enable verbose logging for test debugging
DEBUG_TESTS=false
PLAYWRIGHT_DEBUG=false
